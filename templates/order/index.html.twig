{% extends 'base.html.twig' %}

{% block title %}Ваши заказы{% endblock %}

{% block body %}
    {% if app.request.query.get('send_succes', null) == 1 %}
        <div class="row justify-content-center">
            <div class="col-3 alert alert-success text-center" role="alert">
                Заказ успешно добавлен
            </div>
        </div>
    {% endif %}

    <h2 class="mb-5">
        Ваши заказы
    </h2>

    <div class="row text-center align-items-center bg-light">
        <div class="col-4">Сервис</div>
        <div class="col-4">Электронная почта</div>
        <div class="col-4">Стоимость</div>
    </div>
    {% for order in orders %}
        <div class="row">
            <div class="col-4">
                {% if order.serviceId %}
                    {{ services[order.serviceId]|e }}
                {% else %}
                    <div class="text-center">-</div>
                {% endif %}
            </div>
            <div class="col-4">
                {% if order.email %}
                    {{ order.email|e }}
                {% else %}
                    <div class="text-center">-</div>
                {% endif %}
            </div>
            <div class="col-4">
                {% if order.price%}
                    {{ order.price|e }}
                {% else %}
                    <div class="text-center">-</div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
{% endblock %}
