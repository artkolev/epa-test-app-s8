{% extends 'base.html.twig' %}

{% block title %}Пожалуйста, авторизуйтесь!{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-sm-5">
            {% if error %}
                <div class="alert alert-danger text-center pb-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="well">
                <form action="{{ path('app_login') }}" method="post">
                    <fieldset>
                        <legend>Пожалуйста, авторизуйтесь</legend>
                        <div class="form-group pb-2">
                            <label for="username">Email:</label>
                            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required>

                        </div>

                        <div class="form-group form-group-password pb-2">
                            <label for="password">Пароль:</label>
                            <input type="password" id="password" class="form-control" name="_password" required>
                        </div>

                        <div class="form-group pb-2">
                            <label>
                                <input type="checkbox" name="_remember_me" checked/>
                                Запомнить меня
                            </label>
                        </div>

                        <input type="hidden" name="_target_path" value="/form">
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-primary">
                            Войти
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
